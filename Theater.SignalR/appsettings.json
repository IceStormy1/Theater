{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.Extensions.Diagnostics.HealthChecks": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log.txt",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "Theater": "User ID=postgres;Password=123;Server=localhost;Port=5432;Database=Theater",
    "MessageBus": "rabbitmq://guest:guest@localhost/",
    "RedisConnectionString": "localhost:6379"
  },
  "ConsumerPrefetchSettings": [
    {
      "ConsumerName": "Test",
      "PrefetchCount": 16
    }
  ],
  "JwtOptions": {
    "Issuer": "authServer",
    "Audience": "resourceServer",
    "Secret": "K!JXnb6:~Rx=tj@2",
    "TokenLifetime": 3600 // 1 hour 
  },
  "FileStorageOptions": {
    "ServiceUrl": "http://127.0.0.1:9000",
    "ServiceInnerUrl": "http://127.0.0.1:9000",
    "ForcePathStyle": true,
    "UseHttp": false,
    "Region": "eu-west-1",
    "AccessKey": "minio",
    "SecretKey": "minio123",
    "MaximumNameLength": 100
  },
  "RoleModel": {
    "User": {
      "Policies": {
        "UserSearch": [ "admin" ],
        "UserView": [ "admin", "user" ],
        "UserEdit": [ "admin", "user" ],
        "UserDelete": [ "admin", "user" ]
      }
    }
  },
  "AllowedHosts": "*"
}